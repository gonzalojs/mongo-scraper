<div class="container">
  <div data-id="{{article._id}}" class="card">
    <div class="card-header">
      <h3>
        <a class="article-link" target="_blank" rel="noopener noreferrer" href="{{article.link}}">{{article.title}}</a>
      </h3>
    </div>
    <div class="card-body">
      <p>{{article.summary}}</p>
    </div>
  </div>
  <div class="row">
    <div class="col-sm-12">
      <form>
        <div class="form-group">
          <label for="body">Notes</label>
          <textarea type="text" class="form-control body" id="body" rows="5" placeholder="Enter notes">{{article.note.body}}</textarea>
        </div>
        <button type="submit" data-id="{{article._id}}" class="btn btn-success add-note">Submit</button>
      </form>
    </div>
  </div>

  <div class="d-inline-flex align-items-center mt-4">
    <div class="toast">
      <div class="toast-body">
        Note saved!
      </div>
    </div>
  </div>

</div>

